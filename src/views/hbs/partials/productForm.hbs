<h1>Ingrese Producto</h1>
<form action="/products" method="post">
    <input type="text" placeholder="Nombre" name="name"> <br/> <br/>
    <input type="number" placeholder="Precio" name="price"> <br/> <br/>
    <input type="text" placeholder="Foto URL" name="thumbnail"> <br/> <br/>
    <input type="submit" value="Enviar"> <br/> <br/> 
</form>
<button id="productButton">Ver productos ingresados</button> 
<script>
    const productButton = document.getElementById("productButton")
    productButton.addEventListener("click", (event) => {
        window.location = "/products"
    })
</script>